{
  "name": "wabuse-cli",
  "version": "1.1.0",
  "description": "Wabuse. Web-components Interactive Tool UX is a builder SSR pages with Web Components",
  "type": "module",
  "main": "./lib/wabuse.cjs",
  "bin": {
    "wabuse": "./bin/index.cjs"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "run-p format:*",
    "format:eclint": "git ls-files | xargs eclint fix",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "prettier \"*\" --write --ignore-path .eslintignore",
    "lint": "run-p lint:*",
    "lint:eclint": "git ls-files | xargs eclint check",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier \"*\" --check --ignore-path .eslintignore",
    "release": "standard-version",
    "test": "mocha test",
    "test:watch": "npm test -- --watch"
  },
  "author": "manufosela",
  "license": "Apache-2.0",
  "dependencies": {
    "@web/dev-server": "^0.1.34",
    "dotenv": "^16.0.2",
    "puppeteer": "^17.0.0",
    "sharp": "^0.31.1",
    "shelljs": "^0.8.5",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@open-wc/eslint-config": "^7.0.0",
    "chai": "^4.3.4",
    "eclint": "^2.1.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.4.2",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-lit-a11y": "^2.2.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">= 7.0.0"
  }
}
